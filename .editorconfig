# .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript/JavaScript: 2 spaces
[*.{ts,tsx,js,jsx,typescript,javascript}]
indent_style = space
indent_size = 2

# Go: tabs (gofmt standard)
[*.go]
indent_style = tab
indent_size = 4

# Rust: 4 spaces (rustfmt standard)
[*.rs]
indent_style = space
indent_size = 4

# Markdown: 2 spaces + allow trailing whitespace
[*.{md,mdc,mdx,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell/Bash: 2 spaces
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Python: 4 spaces (PEP 8 standard)
[*.py]
indent_style = space
indent_size = 4

# YAML: 2 spaces
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON: 2 spaces
[*.json]
indent_style = space
indent_size = 2

# HTML/CSS: 2 spaces
[*.{html,htm,css,scss,sass}]
indent_style = space
indent_size = 2

# Makefile: tabs required
[Makefile]
indent_style = tab

# XML: 2 spaces
[*.xml]
indent_style = space
indent_size = 2

# Lua: 2 spaces
[*.lua]
indent_style = space
indent_size = 2
