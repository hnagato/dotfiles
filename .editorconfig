# .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go: tabs (gofmt standard)
[*.go]
indent_style = tab
indent_size = 4

# Rust: 4 spaces (rustfmt standard)
[*.rs]
indent_style = space
indent_size = 4

# Markdown: 2 spaces + allow trailing whitespace
[*.{md,mdc,mdx,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

