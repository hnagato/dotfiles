[user]
	name = hnagato
	email = nagato@team-lab.com
[color]
	ui = auto
[alias]
	ai = add --interactive
	ci = commit
	co = checkout
	di = diff
	st = status
	br = branch
	fa = fetch --all
	fo = fetch origin
	mf = merge FETCH_HEAD
	ro = rebase origin
	sl = stash list
	sa = stash apply
	sp = stash pop
	uptodate = !git submodule foreach "git pull --rebase; git co master"
	unstage = reset HEAD --
	uncommit = reset --soft HEAD~
	undopush = push -f origin HEAD~:master
	hist = log --graph --date=short --pretty=format:\"%C(yellow)%h%C(green bold) %ad%C(reset) %s%C(blue)%d [%an]\"
	l = log --graph --pretty='format:%C(yellow)%h%Cblue%d%Creset %s %C(green)%an %C(green bold)%ar%Creset'
	ls = log --stat -p -1
[core]
	pager = less -Ri
	excludesfile = /Users/hnagato/.global_gitignore
	quotepath = false
	safecrlf = true
	autocrlf = input
[github]
	user = hnagato
[pull]
	# 全追跡ブランチで 'git pull' する時に rebase を使う
# 	rebase = true
[merge]
	tool = p4merge
[mergetool]
	keepBackup = false
[mergetool "p4merge"]
	path = p4merge
	keepTemporaries = false
	trustExitCode = false

[push]
	default = simple
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[http]
	sslVerify = false

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
