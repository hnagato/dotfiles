{
  "plugins": {
    "@textlint/markdown": {
      "extensions": [".mdx"]
    }
  },
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "# Development",
        "# Installation",
        "## Installation",
        "## Usage",
        "## Configuration",
        "## Examples",
        "## API",
        "## Contributing"
      ]
    }
  },
  "rules": {
    "@textlint-ja/preset-ai-writing": true,
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      },
      "ja-space-around-code": {
        "before": true,
        "after": true
      }
    },
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 150
      },
      "max-ten": {
        "max": 3
      },
      "no-mix-dearu-desumasu": {
        "preferInHeader": "ですます",
        "preferInBody": "ですます",
        "preferInList": "ですます",
        "strict": false
      },
      "ja-no-mixed-period": {
        "allowPeriodMarks": [":", "..."],
        "allowEmojiAtEnd": true
      },
      "ja-no-successive-word": {
        "allow": ["の", "、", "。"]
      }
    },
    "no-todo": false,
    "terminology": {
      "defaultTerms": true,
      "skip": ["Blockquote"],
      "terms": {
        "JavaScript": "JavaScript",
        "TypeScript": "TypeScript",
        "Node.js": "Node.js",
        "npm": "npm",
        "API": "API",
        "URL": "URL",
        "CLI": "CLI",
        "UI": "UI",
        "UX": "UX"
      }
    },
    "alex": {
      "allow": ["color", "hook", "hooks", "host-hostess", "hostesses-hosts", "just", "simple", "special"]
    }
  }
}